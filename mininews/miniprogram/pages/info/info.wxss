.top1{
  height: 80rpx;
  background-color: #dd3635;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
}

.back_btn{
  color: #ffffff;
  font-size: 32rpx;
}

.back_btn::before{
  content: '';
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-right: 5rpx solid #ffffff;
  border-top: 5rpx solid #ffffff;
  transform: rotate(-135deg) 
}

.bot{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 70rpx;
  border-top: 1px solid #f2f2f2;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  box-sizing: border-box;
  padding-right: 20rpx;
  background-color: #ffffff;
}


.coll_btn{
  display: inline-flex;
  align-items: center;
  color: #dd3635;
  font-size: 24rpx;
}
.coll_btn>image{
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}


.info{
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.title{
  font-size: 48rpx;
  color: #222222;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.media{
  color: #222222;
  font-size: 32rpx;
}

.time{
  font-size: 28rpx;
  color: #a5a5a5;
  margin-left: 10rpx;
}

.one-p{
  font-size: 32rpx;
  color: #222222;
  margin-bottom: 20rpx;
}

.content-picture{
  max-width: 100%;
}