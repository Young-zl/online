.top1{
  height: 80rpx;
  background-color: #dd3635;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  display: flex;
  align-items: center;
}

.back_btn{
  color: #ffffff;
  font-size: 32rpx;
}

.back_btn::before{
  content: '';
  display: inline-block;
  width: 24rpx;
  height: 24rpx;
  border-right: 5rpx solid #ffffff;
  border-top: 5rpx solid #ffffff;
  transform: rotate(-135deg) 
}

.top2{
  position: fixed;
  top: 80rpx;
  left: 0;
  height: 110rpx;
  width: 100%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}

.searchbar{
  width: 100%;
  height: 60rpx;
  border: 1px solid #888888;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.searchbar>input{
  flex: 1;
  padding-left: 20rpx;
}

.searchbar>view{
  width: 60rpx;
  height: 60rpx;
  display: inline-flex;
  justify-content: center;
  align-items: center;
}

.searchbar>view>image{
  width: 40rpx;
  height: 40rpx;
}



.list{
  padding-left: 10rpx;
  padding-right: 10rpx; 
}

.li{
  display: flex;
  border-bottom: 1px solid #f3f3f3;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}
.li:last-child{
  border-bottom: 0;
}

.box1{
  flex: 1;
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
}
.title{
  font-size: 36rpx;
  color: #222222;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  white-space: normal;
}
.media{
  font-size: 24rpx;
  color: #a5a5a5;
}
.box2{
  width: 230rpx;
  height: 150rpx;
}

.box2>image{
  width: 230rpx;
}