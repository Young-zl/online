.item{
  padding: 20rpx;
}

.inp{
  border: 1rpx solid #de3232;
  height: 76rpx;
  border-radius:10rpx;
  padding-left: 20rpx;
}

.atitle{
  font-size: 36rpx;
  color: #a5a5a5;
}

.add{
  width: 90rpx;
  height: 90rpx;
  border-radius: 10rpx;
  border: 1px solid #888888;
  position: relative;
  overflow: hidden;
}

.add::before{
  content: '';
  display: inline-block;
  height: 6rpx;
  width: 60rpx;
  background-color: #888888;
  position: absolute;
  z-index: 1;
  top: 50%;
  left: 50%;
  margin-left: -30rpx;
  margin-top: -3rpx;
}

.add::after{
  content: '';
  display: inline-block;
  height: 60rpx;
  width: 6rpx;
  background-color: #888888;
  position: absolute;
  z-index: 1;
  top: 50%;
  left: 50%;
  margin-left: -3rpx;
  margin-top: -30rpx;
}

.sign_btn{
  height: 76rpx;
  border-radius: 10rpx;
  background-color: #de3232;
  text-align: center;
  line-height: 76rpx;
  color: #fff;
  font-size: 36rpx;
}

.link_btn{
  color: #4d35a6;
  font-size: 28rpx;
  text-decoration: underline;
  float: right;
}

.mask{
  width: 90rpx;
  height: 90rpx;
  background-color: #fff;
  position: absolute;
  z-index: 2;
}

.simg{
  width: 90rpx;
  height: 90rpx;
  position: absolute;
  z-index: 3;
}